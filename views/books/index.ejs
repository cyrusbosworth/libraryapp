<div class="text-center">
<h2 class="page-header">Search Books</h2>

<div class="dark-card">


<form class="form-inline" action="/books" method="GET">
	<div class="form-group">
	
		<input class="form-control form-control-lg" type="text" name="title" value="<%=searchOptions.title%>" placeholder="Title" />
  </div>
  <div class="text-center m-2">
	<div class="form-group">
		<label>Published After</label>
		<input class="form-control form-control-sm ml-2"  type="date" name="publishedAfter" value="<%=searchOptions.publishedAfter%>" />
 
  </div>
  
	<div class="form-group">
		<label>Published Before</label>
		<input class="form-control form-control-sm ml-2" type="date" name="publishedBefore" value="<%=searchOptions.publishedBefore%>" />
  
  </div>

  </div>


	<button class="btn mybtn btn-light" type="submit">Search</button>
</form>

</div>


<div class="mt-5">
  
  <% books.forEach(book => { %>
  <a href="/books/<%=book.id%>">
  <img class="m-2" height="150" width="100" src="<%=book.coverImagePath%>" />
  </a>
	<%});%>
</div>
</div>